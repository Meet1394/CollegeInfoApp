@* Views/Home/HiddenFieldDemo.cshtml *@
@{
    ViewData["Title"] = "Hidden Field Demo";
}

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-danger text-white">
            <h2><i class="bi bi-eye-slash"></i> Hidden Field Demonstration</h2>
        </div>
        <div class="card-body">
            @if (ViewBag.Message != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <strong>Success!</strong> @ViewBag.Message
                    
                    <div class="mt-3">
                        <h5>Processed Data:</h5>
                        <ul class="list-group">
                            <li class="list-group-item"><strong>Student ID (Hidden):</strong> @ViewBag.StudentId</li>
                            <li class="list-group-item"><strong>Student Name (Visible):</strong> @ViewBag.StudentName</li>
                            <li class="list-group-item"><strong>Hidden Data:</strong> @ViewBag.HiddenData</li>
                        </ul>
                    </div>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            <div class="row">
                <div class="col-md-8 mx-auto">
                    <div class="card mb-3">
                        <div class="card-header bg-primary text-white">
                            <h5>Student Form with Hidden Fields</h5>
                        </div>
                        <div class="card-body">
                            <form asp-action="ProcessHiddenField" method="post">
                                <!-- Hidden Fields - Not visible to user but submitted with form -->
                                <input type="hidden" name="studentId" value="12345" />
                                <input type="hidden" name="hiddenData" value="This is secret data stored in hidden field - Timestamp: @DateTime.Now.ToString()" />
                                
                                <!-- Visible Fields -->
                                <div class="mb-3">
                                    <label for="studentName" class="form-label">Student Name (Visible Field)</label>
                                    <input type="text" class="form-control" id="studentName" name="studentName" 
                                           placeholder="Enter student name" required>
                                    <small class="text-muted">This field is visible to the user</small>
                                </div>

                                <div class="alert alert-info">
                                    <strong><i class="bi bi-info-circle"></i> Hidden Fields in this form:</strong>
                                    <ul class="mb-0 mt-2">
                                        <li><strong>studentId:</strong> 12345 (Hidden from user)</li>
                                        <li><strong>hiddenData:</strong> Secret timestamp data (Hidden from user)</li>
                                    </ul>
                                </div>

                                <button type="submit" class="btn btn-danger w-100">
                                    <i class="bi bi-send"></i> Submit Form with Hidden Fields
                                </button>
                            </form>
                        </div>
                    </div>

                    <div class="card mb-3">
                        <div class="card-header bg-secondary text-white">
                            <h5>View Form Source Code</h5>
                        </div>
                        <div class="card-body">
                            <p>Right-click on this page and select "View Page Source" or "Inspect" to see the hidden fields in the HTML.</p>
                            <pre class="bg-light p-3 rounded"><code>&lt;input type="hidden" name="studentId" value="12345" /&gt;
&lt;input type="hidden" name="hiddenData" value="Secret data..." /&gt;</code></pre>
                        </div>
                    </div>
                </div>
            </div>

            <div class="alert alert-warning mt-3">
                <h5><i class="bi bi-info-circle"></i> About Hidden Fields:</h5>
                <p>Hidden fields are HTML input fields that are not displayed to the user but are submitted with the form data.</p>
                <p><strong>Characteristics:</strong></p>
                <ul>
                    <li>Not visible in the rendered page</li>
                    <li>Visible in HTML source code (View Source)</li>
                    <li>Submitted with form POST/GET requests</li>
                    <li>Can be modified by tech-savvy users</li>
                </ul>
                <p><strong>Use Case:</strong> Passing non-sensitive data like record IDs, timestamps, form state information.</p>
                <p class="text-danger"><strong>Security Note:</strong> Never store sensitive information in hidden fields as they can be viewed and modified in the HTML source!</p>
            </div>

            <div class="text-center mt-3">
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-house"></i> Back to Home
                </a>
            </div>
        </div>
    </div>
</div>