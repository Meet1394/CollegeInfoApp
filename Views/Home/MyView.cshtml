            </div>
        </div>
    </div>

    <!-- Data Handling Demos Links -->
    <div class="card">
        <div class="card-header bg-info text-white">
            <h4><i class="bi bi-database"></i> Data Handling Demonstrations</h4>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-3 mb-2">
                    <a asp-action="CookiesDemo" class="btn btn-outline-primary w-100">
                        <i class="bi bi-cookie"></i> Cookies Demo
                    </a>
                </div>
                <div class="col-md-3 mb-2">
                    <a asp-action="SessionDemo" class="btn btn-outline-success w-100">
