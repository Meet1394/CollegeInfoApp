                    <a asp-action="QueryStringDemo" asp-route-name="John Doe" asp-route-department="Computer Engineering" asp-route-rollNumber="2021001" class="btn btn-outline-warning w-100">
                        <i class="bi bi-link-45deg"></i> Query String Demo
                    </a>
                </div>
                <div class="col-md-3 mb-2">
                    <a asp-action="HiddenFieldDemo" class="btn btn-outline-danger w-100">
