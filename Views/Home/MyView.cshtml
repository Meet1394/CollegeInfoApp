@* Views/Home/MyView.cshtml *@
@{
    ViewData["Title"] = "College Information";
}

<div class="container mt-4">
    <!-- Greeting Section with Time-based Image -->
    <div class="card mb-4 shadow-sm">
        <div class="card-body text-center">
            <img src="~/images/@ViewBag.ImageName" alt="Time of day" class="img-fluid rounded mb-3" style="max-height: 300px; width: 100%; object-fit: cover;" />
            <h1 class="display-4">@ViewBag.Greeting!</h1>
            <p class="lead">Welcome to Engineering College Portal</p>
            <p class="text-muted">Current Time: @ViewBag.CurrentTime</p>
        </div>
    </div>

    <!-- Extension Method Demo -->
    <div class="alert alert-info">
        <strong>Extension Method Demo:</strong> Student Full Name: @ViewBag.StudentFullName
    </div>

    <!-- College News Section (Async Method Demo) -->
    <div class="card mb-4">
        <div class="card-header bg-primary text-white">
            <h4><i class="bi bi-newspaper"></i> Latest College News</h4>
        </div>
        <div class="card-body">
            <ul class="list-group">
                @foreach (var newsItem in ViewBag.News)
                {
                    <li class="list-group-item">@newsItem</li>
                }
            </ul>
            <p class="text-muted mt-2"><small>News loaded asynchronously</small></p>
        </div>
    </div>

    <!-- Navigation Button -->
    <div class="text-center mb-4">
        <a asp-controller="Home" asp-action="Welcome" class="btn btn-success btn-lg">
            <i class="bi bi-arrow-right-circle"></i> Go to Welcome Page
        </a>
    </div>

    <!-- Engineering Courses Table -->
